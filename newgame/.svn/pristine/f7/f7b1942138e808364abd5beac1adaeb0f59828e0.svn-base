<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context.xsd">
<!--     <bean id="publicmain" class="web.game.common.Publicmain"
		init-method="init" scope="singleton">
	</bean> -->
	
	<bean id="dataSourcetest" class="web.game.dynamicdatasource.DataSourcetest" init-method="init">
	</bean>
    <bean id="WordFilter" class="com.xuanzhi.tools.text.WordFilter"
		init-method="initialize" scope="singleton">
		<property name="filterFile"
			value="${webgame.webdir}/WEB-INF/game_init_config/badword.dic">
		</property>
	</bean>
 	<bean id="gameServerManager"
		class="web.game.util.GameServerManager" init-method="init"
		destroy-method="destroy" scope="singleton">
		<property name="serverid"
			value="${webgame.server}">
		</property>
		<property name="servername"
			value="${webgame.name}">
		</property>
		<property name="weburl"
			value="${webgame.weburl}">
		</property>
		<property name="weburl2"
			value="${webgame.weburl2}">
		</property>
		<property name="sqlurl"
			value="${jdbc_url}">
		</property>
		<property name="user"
			value="${jdbc_username}">
		</property>
		<property name="password"
			value="${jdbc_password}">
		</property>
		<property name="driver"
			value="${driver}">
		</property>
	</bean>
 	<bean id="publicIDManager"
		class="web.game.util.PublicIDManager" init-method="init"
		destroy-method="destroy" scope="singleton">
		<!-- <property name="createtableManager" ref="createtableManager"></property> -->
		<property name="serverId"
			value="${webgame.server}">
		</property>
	</bean>
	<bean id="sendgetManager"
		class="web.game.util.SendgetManager" init-method="init"
		destroy-method="destroy" scope="singleton">
	</bean>
	
	<bean id="tasksManager"
		class="web.game.tasks.TasksManager" init-method="init"
		destroy-method="destroy" scope="singleton">
			<property name="xmlfile"
				value="${webgame.webdir}/WEB-INF/game_init_config/task.xml">
		    </property>
			<property name="xmlfile2"
				value="${webgame.webdir}/WEB-INF/game_init_config/dailytask.xml">
			</property>
	</bean>
	
	<bean id="playerManager"
		class="web.game.player.PlayerManager" init-method="init"
		destroy-method="destroy" scope="singleton">
		<property name="xmlfile"
				value="${webgame.webdir}/WEB-INF/game_init_config/translate.xml">
		</property>
		<property name="serverid"
			value="${webgame.server}">
		</property>
		
		<property name="translate"
			value="${language.translate}">
		</property>
		
		<property name="version"
			value="${webgame.version}">
		</property>
		
	</bean>
	
	<bean id="tankManager"
		class="web.game.tank.TankManager" init-method="init"
		destroy-method="destroy" scope="singleton">
		<property name="xmlfile"
				value="${webgame.webdir}/WEB-INF/game_init_config/tank.xml">
		</property>
		<property name="xmlfile1"
				value="${webgame.webdir}/WEB-INF/game_init_config/level.xml">
		</property>
	</bean>
	
	<bean id="articleManager"
		class="web.game.article.ArticleManager" init-method="init"
		destroy-method="destroy" scope="singleton">
		<property name="xmlfile"
				value="${webgame.webdir}/WEB-INF/game_init_config/article.xml">
		</property>
	</bean>

</beans>
